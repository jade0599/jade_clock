<div id=<%= dom_id(alarm) %> class="alarm">
  <div class="columns">
    <div class="column is-8">
        <span class="icon has-text-info">
            <i class="far fa-clock"></i>
          </span>
        <%= link_to alarm.datetime.to_s(:time), alarm %>
    </div>
    <div class="column is-2">
        <%= link_to alarm_toggle_active_path(alarm), remote: true, method: :post do %>
            <span class="icon has-text-info">
              <i class="fas fa-lg fa-toggle-<%= alarm.active? ? 'on' : 'off' %>"></i>
            </span>
        <% end %>
    </div>
    <div class="column is-2">
        <%= button_to alarm, method: :delete, :onclick => "return confirm('Are you sure you want to delete this post?')" do %>
              <span class="icon has-text-danger" style="{float: right;}">
                <i class="fas fa-2x fa-times-circle"></i>
              </span>
        <% end %>
    </div>
  </div>
</div>